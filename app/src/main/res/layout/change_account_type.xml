<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change account type"
        android:textSize="30dp"
        android:fontFamily="@font/segoeuibold"
        android:textColor="@color/appTheme"
        android:padding="20dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/regularAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_for_search_product"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/how_to_reg"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:backgroundTint="@color/appTheme"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Regular"
                        android:fontFamily="@font/segoeuibold"
                        android:textColor="@color/appTheme"
                        android:gravity="center"
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/doctorAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_for_search_product"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/medical_services"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:backgroundTint="@color/appTheme"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor"
                        android:fontFamily="@font/segoeuibold"
                        android:textColor="@color/appTheme"
                        android:gravity="center"
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sellerAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:background="@drawable/background_for_search_product"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/sell"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:backgroundTint="@color/appTheme"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seller "
                        android:fontFamily="@font/segoeuibold"
                        android:textColor="@color/appTheme"
                        android:gravity="center"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/cancelAccountChange"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0000"
                android:text="Cancel"
                android:textSize="30dp"
                />
        </LinearLayout>

    </ScrollView>



</LinearLayout>