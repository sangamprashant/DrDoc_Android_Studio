<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#0F000000"
    tools:context=".SignUpActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/SignupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/appname"
                />
            <EditText
                android:id="@+id/userInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="Full Name"
                android:textSize="20dp"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/userInputUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="User Name"
                android:textSize="20dp"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/userNameAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/userNameAvailable"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="13dp"
                android:textColor="#009688"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/userNameIsAlreadyUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/userNameIsAlreadyUsed"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="13dp"
                android:textColor="#960000"
                android:visibility="gone"
                />
            <!--add menu button-->
            <Spinner
                android:id="@+id/accountType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_margin="10dp" />
            <EditText
                android:id="@+id/userInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="Email"
                android:textSize="20dp"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/emailAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EmailAvailable"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="13dp"
                android:textColor="#009688"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/emailIsAlreadyUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EmailIsAlreadyUsed"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="13dp"
                android:textColor="#960000"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/userInputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="Password"
                android:textSize="20dp"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/sign_Up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="SignUp"
                android:background="@drawable/logbutton"
                android:elevation="12dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textSize="15dp"
                    />
                <TextView
                    android:textColor="#009688"
                    android:id="@+id/goToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SignIn"
                    android:fontFamily="@font/segoeuibold"
                    android:textSize="15dp"
                    />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/SignupLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sendingOtp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/sendingemail"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="visible"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sentOtp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/otpmessagesent"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/enterOtp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/enterotp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/accountCreating"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/accountcreating"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/accountLogin"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/searchingfile"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/statusOfOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sending OTP to mail."
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:fontFamily="@font/segoeuibold"
            android:textColor="#009688"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:id="@+id/verify_otp_btn_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/root_otp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/otp_edit_box1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="15sp"
                    android:background="@drawable/edittext_curve_bg"/>

                <EditText
                    android:id="@+id/otp_edit_box2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/edittext_curve_bg"/>

                <EditText
                    android:id="@+id/otp_edit_box3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/edittext_curve_bg"/>

                <EditText
                    android:id="@+id/otp_edit_box4"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/edittext_curve_bg" />
                <EditText
                    android:id="@+id/otp_edit_box5"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/edittext_curve_bg" />
                <EditText
                    android:id="@+id/otp_edit_box6"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/edittext_curve_bg" />


            </LinearLayout>
            <Button
                android:id="@+id/verify_otp_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Verify"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>